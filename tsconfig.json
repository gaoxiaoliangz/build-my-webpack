{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "dist"]
}
